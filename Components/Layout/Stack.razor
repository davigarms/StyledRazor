@using Styled = Lib.Styled

<Styled 
	Base=@Div 
	style=@($@"
		--gutter: {@Gutter};
	")
>
	@ChildContent
</Styled>

@code {
    Styled Div =>
        new Styled(this)
            .Css(@"
				div {
					display: flex;
					flex-direction: column;
					justify-content: flex-start;
					height: inherit;
					position: relative;
				}
			    
				div > * + * {
					margin-top: var(--gutter);
					overflow: auto !important;
				} 
			");

    [Parameter]
    public string Gutter { get; set; } = Style.SpacingXL;

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}