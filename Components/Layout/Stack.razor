<Render 
	Component=@Wrapper 
	style=@($@"
		--gutter: {@Gutter};
	")
>
	@ChildContent
</Render>

@code {
	private Styled Wrapper => 
		new Styled("div")
			.Type(GetType())
			.Css(@"
				div {
					display: flex;
					flex-direction: column;
					justify-content: flex-start;
					height: inherit;
					position: relative;
				}
			    
				div > * + * {
					margin-top: var(--gutter);
					overflow: auto !important;
				} 
			");
	
	[Parameter]
	public string Gutter { get; set; } = Style.SpacingXL;

	[Parameter]
	public RenderFragment ChildContent { get; set; }
}