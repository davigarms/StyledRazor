@using StyledRazor.Lib.Components.Layout
@inherits UIComponents

<Layout Styled="DefaultButton"
        style=@($@"
          --margin: {Margin ?? ButtonMargin};
          --padding: {Padding ?? ButtonPadding};")>
  @ChildContent
</Layout>

@code {
  [Parameter]
  public RenderFragment ChildContent { get; set; }

  [Parameter]
  public string Margin { get; set; }

  [Parameter]
  public string Padding { get; set; }
}