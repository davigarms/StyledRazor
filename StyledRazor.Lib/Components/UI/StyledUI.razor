@code {

    protected static string ButtonDefinition =>
        @"display: inline-block;
		border-radius: 3px;
		padding: 0.5rem 0;
		margin: 0.5rem 1rem;
		width: 11rem;
		background: transparent;
		color: black;
		border: 2px solid grey;
		text-align: center;
		cursor: pointer;
		";

    protected static Styled GreyButton =>
        new($@"a
				{{
					{ButtonDefinition}
					background: grey;
					color: white;
				}}
			", "GreyButton");

    protected static Styled AlertButton =>
        new($@"
				a {{
					{ButtonDefinition}
					background: red;
					color: white;
				}}
			", "AlertButton");

}