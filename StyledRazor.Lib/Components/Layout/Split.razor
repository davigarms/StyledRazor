@inherits ParametersBase

<Layout _="Wrapper" 
        stretch-all="@StretchAll">
	@ChildContent
</Layout>

@code {

  Styled Wrapper => new("div", 
    $@"
     {{
      display: flex;
      flex-wrap: nowrap;
      height: inherit;
      min-height: inherit;
    }}

    [stretch-all] > *  {{
      flex: 1 
    }}

     > :nth-child({StretchIndex}) {{
      flex: 1
    }}
  ", typeof(Split));

  [Parameter] public bool StretchAll { get; set; }

	[Parameter] public int StretchIndex { get; set; }
}