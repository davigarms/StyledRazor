@inherits StyledBase

<Styled Base="@BaseComponent"
        stretch-all="@StretchAll">
  @ChildContent
</Styled>

@code {
  protected override Styled BaseComponent => Create.Div($@"{{
    display: flex;
    flex-wrap: nowrap;
    height: inherit;
    min-height: inherit;
  }}

  [stretch-all] > *  {{
    flex: 1 
  }}

  > :nth-child({StretchIndex}) {{
    flex: 1
  }}");

  [Parameter] public bool StretchAll { get; set; }

  [Parameter] public int StretchIndex { get; set; }
}