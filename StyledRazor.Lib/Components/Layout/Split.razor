@using StyledRazor.Core.Model
@inherits StyledRazor.Core.Component.StyledBase

<Layout Styled="@Base" 
        stretch-all="@StretchAll">
	@ChildContent
</Layout>

@code {
  [Parameter] public bool StretchAll { get; set; }

  [Parameter] public int StretchIndex { get; set; }

  public override Styled Base => Create.Div($@"{{
    display: flex;
    flex-wrap: nowrap;
    height: inherit;
    min-height: inherit;
  }}

  [stretch-all] > *  {{
    flex: 1 
  }}

  > :nth-child({StretchIndex}) {{
    flex: 1
  }}");
}