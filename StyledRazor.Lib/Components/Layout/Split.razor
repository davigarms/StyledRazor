@inherits StyledBase

<Layout Styled="@Base" 
        stretch-all="@StretchAll">
	@ChildContent
</Layout>

@code {
  protected override Styled Base => Div(
    $@"
      {{
        display: flex;
        flex-wrap: nowrap;
        height: inherit;
        min-height: inherit;
      }}

      [stretch-all] > *  {{
        flex: 1 
      }}

       > :nth-child({StretchIndex}) {{
        flex: 1
      }}
    ");

  [Parameter] public bool StretchAll { get; set; }

	[Parameter] public int StretchIndex { get; set; }
}