@inherits Styles

<Styled
    Type=@Div
    stretch-all=@StretchAll>
    @ChildContent
</Styled>

@code {

    Styled Div =>
        new($@"
				div {{
					display: flex;
					flex-wrap: nowrap;
					height: inherit;
					min-height: inherit;
				}}
				
				div[stretch-all] > *  {{
					flex: 1 
				}}
				
				div > :nth-child({StretchIndex}) {{
					flex: 1
				}}
			", typeof(Split));

    [Parameter]
    public bool StretchAll { get; set; }

    [Parameter]
    public int StretchIndex { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

}