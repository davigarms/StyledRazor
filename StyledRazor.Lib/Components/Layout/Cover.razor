<Styled
    Type=@Div
    style=@($@"
		--min-height: {@MinimumHeight};
		--padding: {@Padding};
		--space: {@Space};
	")>
    @ChildContent
</Styled>

@code {

    Styled Div =>
        new(@"
                div {
                  display: flex;
                  flex-direction: column;
                  min-height: var(--min-height);
                  padding: var(--padding);
                }
        
                div > * {
                  margin-top: var(--space);
                  margin-bottom: var(--space);
                }
        
                div > :first-child:not([centered]) {
                  margin-top: 0;
                }
        
                div > :last-child:not([centered]) {
                  margin-bottom: 0;
                }
        
                div > [centered] {
                  margin-top: auto;
                  margin-bottom: auto;
                }
            ", typeof(Cover));

    private string Padding => NoPadding ? "0" : Space;

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string MinimumHeight { get; set; } = "100vh";

    [Parameter]
    public string Space { get; set; } = T.SpacingM;

    [Parameter]
    public bool NoPadding { get; set; }

}