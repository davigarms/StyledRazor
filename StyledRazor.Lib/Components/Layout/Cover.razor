@inherits StyledBase

<Layout Styled="@Base"
        style=@($@"
		      --min-height: {@MinimumHeight};
		      --padding: {@Padding};
		      --space: {@Space};")>
  @ChildContent
</Layout>

@code {
  protected override Styled Base => Div(
    @"
      {
        display: flex;
        flex-direction: column;
        min-height: var(--min-height);
        padding: var(--padding);
      }

      > * {
        margin-top: var(--space);
        margin-bottom: var(--space);
      }

      > :first-child:not([centered]) {
        margin-top: 0;
      }

      > :last-child:not([centered]) {
        margin-bottom: 0;
      }

      > [centered] {
        margin-top: auto;
        margin-bottom: auto;
      }
  ");

  private string Padding => NoPadding ? Tokens.SizeZero : Space;

  [Parameter]
  public string MinimumHeight { get; set; } = Tokens.SizeFullHeight;

  [Parameter]
  public string Space { get; set; } = Tokens.SpacingM;

  [Parameter]
  public bool NoPadding { get; set; }
}