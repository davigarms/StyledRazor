<Layout _="Wrapper"
        style=@($@"
					--max-width: {(Fluid ? Width : Tokens.Initial)};
					--width: {(Fluid ? Tokens.SizeFullScale : Width)};")
        centered="@Centered">
  @ChildContent
</Layout>

@code {

	Styled Wrapper => new("div",
	  @"
			{
				margin-left: auto;
				margin-right: auto;
				max-width: var(--max-width);
				width: var(--width);
				position: relative;
			}
		", typeof(Container));

  private string MaxWidth { get; set; }

  [Parameter]
  public bool Fluid { get; set; }

  [Parameter]
  public bool Centered { get; set; }

  [Parameter]
  public string Width { get; set; }

  [Parameter]
  public RenderFragment ChildContent { get; set; }
}