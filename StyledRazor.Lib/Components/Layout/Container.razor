@inherits Styles

<Styled
    Type=@Div
    centered=@Centered
    style=@($@"
		--max-width: {(Fluid ? Width : Initial)};
		--width: {(Fluid ? SizeFullScale : Width)};
	")>
    @ChildContent
</Styled>

@code {

    Styled Div =>
        new(@"
				div {
					margin-left: auto;
					margin-right: auto;
					max-width: var(--max-width);
					width: var(--width);
					position: relative;
				}
			");

    private string MaxWidth { get; set; }

    [Parameter]
    public bool Fluid { get; set; }

    [Parameter]
    public bool Centered { get; set; }

    [Parameter]
    public string Width { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

}