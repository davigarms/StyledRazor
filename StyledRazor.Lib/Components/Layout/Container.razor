@using Styled = StyledRazor.Lib.Styled

<Styled
	Base=@Div 
	style=@($@"
		--max-width: {MaxWidth};
		--width: {Width};
	")
	centered=@Centered
>
	@ChildContent
</Styled>

@code {

	Styled Div =>
		new (@"
				div {
					margin-left: auto;
					margin-right: auto;
					max-width: var(--max-width);
					width: var(--width);
					position: relative;
				}
			", this);
	
	private string _width = "initial";

	private string MaxWidth => Fluid ? _width : "initial";

	[Parameter]
	public bool Fluid { get; set; } 

	[Parameter]
	public bool Centered { get; set; }

	[Parameter]
	public string Width
	{
		get => Fluid ? "100%" : _width;
		set => _width = value;
	}

	[Parameter]
	public RenderFragment ChildContent { get; set; }
}