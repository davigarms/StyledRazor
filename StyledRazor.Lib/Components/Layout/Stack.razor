@using StyledRazor.Lib.Styles
@using StyledRazor.Core
@inherits StyledRazor.Core.StyledBase

<Layout Styled="@Base"
        style=@($@"
					--gutter: {@Gutter};")>
  @ChildContent
</Layout>

@code {
  [Parameter] public string Gutter { get; set; } = Tokens.SpacingL;

  protected override Styled Base => Create.Div(@"
	{
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
		height: inherit;
		position: relative;
	}

	> * + * {
		margin-top: var(--gutter);
		overflow: auto !important;
	}");
}