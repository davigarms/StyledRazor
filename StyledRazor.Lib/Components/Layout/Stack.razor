@inherits Styled

<Styled Base="@ComponentBase"
        Style=@($@"--gutter: {Gutter ?? Tokens.SpacingL}")>
  @ChildContent
</Styled>

@code {
  [Parameter] public string Gutter { get; set; }

	protected override Styled ComponentBase => CreateStyled.Div(@"{
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
		height: inherit;
		position: relative;
	}

	> * + * {
		margin-top: var(--gutter);
		overflow: auto !important;
	}");
}