<Styled
    Type=@Div
    style=@($@"
		--gutter: {@Gutter};
	")>
    @ChildContent
</Styled>

@code {

    Styled Div =>
        new(@"
				div {
					display: flex;
					flex-direction: column;
					justify-content: flex-start;
					height: inherit;
					position: relative;
				}    
				
				div > * + * {
					margin-top: var(--gutter);
					overflow: auto !important;
				} 
			", typeof(Stack));

    [Parameter]
    public string Gutter { get; set; } = Style.SpacingXl;

    [Parameter]
    public RenderFragment ChildContent { get; set; }

}