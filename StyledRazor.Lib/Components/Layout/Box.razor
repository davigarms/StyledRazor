@using Styled = Lib.Styled

<Styled
	Base=@H1
	style=@($@"
		--height: {@Height};
		--padding: {@Padding};
		--width: {@Width};
	")
>
	@ChildContent
</Styled>

@code {
	Styled H1 =>
		new (@"
				h1 {
					height: var(--height);
					padding: var(--padding);
					width: var(--width);
				}
			");

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string Height { get; set; } = "initial";

    [Parameter]
    public string Width { get; set; } = "initial";

    [Parameter]
    public string Padding { get; set; } = Style.SpacingM;
}