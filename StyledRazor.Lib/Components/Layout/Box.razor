@inherits Styles

<Styled
    Type=@H1
    style=@($@"
		--height: {@Height};
		--padding: {@Padding};
		--width: {@Width};
	")>

    @ChildContent
</Styled>

@code {

    Styled H1 =>
        new(@"
				h1 {
					height: var(--height);
					padding: var(--padding);
					width: var(--width);
				}
			");

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string Height { get; set; } = Initial;

    [Parameter]
    public string Width { get; set; } = Initial;

    [Parameter]
    public string Padding { get; set; } = SpacingM;

}