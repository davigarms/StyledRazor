@using BlazorApp.Lib.Styled
@(new Styled()
	.As("container")
	.WithContent(ChildContent)
	.WithParams(new Params()
	{
		{"centered", Centered}
	})
	.WithStyle($@"
		--container-max-width: {MaxWidth};
		--container-width: {Width};
	")
	.WithCss(@"
		div {
		    margin-left: auto;
	        margin-right: auto;
	        max-width: var(--container-max-width);
	        width: var(--container-width);
	        position: relative;
		}
	")
	.Render())

@code {
	private string _width = "initial";

	private string MaxWidth => Fluid ? _width : "initial";

	[Parameter]
	public bool Fluid { get; set; } 

	[Parameter]
	public bool Centered { get; set; }

	[Parameter]
	public string Width
	{
		get => Fluid ? "100%" : _width;
		set => _width = value;
	}

	[Parameter]
	public RenderFragment ChildContent { get; set; }

}