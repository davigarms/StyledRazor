<div
	class=@_styled.ClassName
	style="
	--container-max-width: @MaxWidth;
	--container-width: @Width;
    "
	centered=@Centered
>
	@ChildContent
	
	@_styled.Render(@"
    	.wrapper {
	        margin-left: auto;
	        margin-right: auto;
	        max-width: var(--container-max-width);
	        width: var(--container-width);
	        position: relative;
	    }
    ")
</div>

@code {
	private Styled _styled = new("container");
	
	private string _width = "initial";
	
	private string MaxWidth => Fluid ? _width : "initial";
	
	[Parameter]
	public bool Fluid { get; set; } = false;
	
	[Parameter]
	public bool Centered { get; set; }

	[Parameter]
	public string Width
	{
		get => Fluid ? "100%" : _width;
		set => _width = value;
	}

	[Parameter]
	public RenderFragment ChildContent { get; set; }
}