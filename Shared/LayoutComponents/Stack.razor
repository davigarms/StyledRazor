@using BlazorApp.Lib.StyledRazor
<Render 
	Component=@Wrapper 
	style=@($@"
		--gutter: {@Gutter};
	")
>
	@ChildContent
</Render>

@code {
	private Styled Wrapper => 
		new Styled()
			.Component(this)
			.Css(@"
				:root {
					display: flex;
					flex-direction: column;
					justify-content: flex-start;
					height: inherit;
					position: relative;
				}
			    
				:root > * + * {
					margin-top: var(--gutter);
					overflow: auto !important;
				} 
			");
	
	[Parameter]
	public string Gutter { get; set; } = StyleDictionary.SpacingXL;

	[Parameter]
	public RenderFragment ChildContent { get; set; }
}