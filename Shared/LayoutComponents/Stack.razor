@using BlazorApp.Lib.Styled
@using BlazorApp.Lib.Styles

<Wrapper 
	Css=@Styled 
	style=@($@"
			--gutter: {@Gutter};
		")
>
	@ChildContent
</Wrapper>

@code {
	private Styled Styled => 
		new Styled()
			.Prefix("stack")
			.Css(@"
				:root {
					display: flex;
          flex-direction: column;
          justify-content: flex-start;
          height: inherit;
          position: relative;
        }
			    
        :root > * + * {
          margin-top: var(--gutter);
          overflow: auto !important;
        } 
			");
	
	[Parameter]
	public string Gutter { get; set; } = StyleDictionary.SpacingXL;

	[Parameter]
	public RenderFragment ChildContent { get; set; }
}