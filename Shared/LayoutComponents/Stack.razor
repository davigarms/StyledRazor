@using BlazorApp.Lib.Styled
@using BlazorApp.Lib.Styles
@(new Styled()
	.As("stack")
	.WithContent(ChildContent)
	.WithStyle($@"
		--stack-gutter: {@Gutter};
	")
	.WithCss(@"
		div {
			display: flex;
	        flex-direction: column;
	        justify-content: flex-start;
	        height: inherit;
	        position: relative;
	    }
	    
	    div > * + * {
			margin-top: var(--stack-gutter);
	        overflow: auto !important;
	    } 
	")
	.Render())

@code {
	[Parameter]
	public string Gutter { get; set; } = StyleDictionary.SpacingXL;

	[Parameter]
	public RenderFragment ChildContent { get; set; }
}