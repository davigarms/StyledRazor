@using BlazorApp.Lib.Styled
@using BlazorApp.Lib.Styles

<Wrapper 
	Css=@Styled 
	style=@($@"
			--height: {@Height};
			--padding: {@Padding};
			--width: {@Width};
		")
>
	@ChildContent
</Wrapper>

@code {
	private Styled Styled =>
		new Styled("h1")
			.Prefix("box")
			.Css(@"
				:root {
          height: var(--height);
          padding: var(--padding);
          width: var(--width);
				}
			");

	[Parameter]
	public RenderFragment ChildContent { get; set; }

	[Parameter]
	public string Height { get; set; } = "initial";

	[Parameter]
	public string Width { get; set; } = "initial";

	[Parameter]
	public string Padding { get; set; } = StyleDictionary.SpacingM;
}