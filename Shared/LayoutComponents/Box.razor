@using BlazorApp.Lib.Styled
@using BlazorApp.Lib.Styles

<h1 wrapper=@_styled.WrapperName
	style="
		--box-height: @Height;
		--box-padding: @Padding;
		--box-width: @Width;
	"
>
	@ChildContent
	@_styled.RenderCss(@"
		h1 {
		    height: var(--box-height);
		    padding: var(--box-padding);
		    width: var(--box-width);
		}
	")
</h1>

@code {
	private Styled _styled = new Styled("h1").Prefix("box");

	[Parameter]
	public RenderFragment ChildContent { get; set; }

	[Parameter]
	public string Height { get; set; } = "initial";

	[Parameter]
	public string Width { get; set; } = "initial";

	[Parameter]
	public string Padding { get; set; } = StyleDictionary.SpacingM;
}