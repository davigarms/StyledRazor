<Render
	Component=@Wrapper
	style=@($@"
		--height: {@Height};
		--padding: {@Padding};
		--width: {@Width};
	")
>
	@ChildContent
</Render>

@code {
	private Styled Wrapper =>
		new Styled("h1")
			.Component(this)
			.Css(@"
				:root {
					height: var(--height);
					padding: var(--padding);
					width: var(--width);
				}
			");

	[Parameter]
	public RenderFragment ChildContent { get; set; }

	[Parameter]
	public string Height { get; set; } = "initial";

	[Parameter]
	public string Width { get; set; } = "initial";

	[Parameter]
	public string Padding { get; set; } = StyleDictionary.SpacingM;
}