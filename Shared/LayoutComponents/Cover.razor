@using BlazorApp.Lib.StyledRazor
<Render 
	Component=@Wrapper 
	style=@($@"
		--min-height: {@MinimumHeight};
		--padding: {@Padding};
		--space: {@Space};
	")
>
	@ChildContent
</Render>

@code {
	private Styled Wrapper =>
		new Styled()
			.Component(this)
			.Css(@"
                :root {
                  display: flex;
                  flex-direction: column;
                  min-height: var(--min-height);
                  padding: var(--padding);
                }
        
                :root > * {
                  margin-top: var(--space);
                  margin-bottom: var(--space);
                }
        
                :root > :first-child:not([centered]) {
                  margin-top: 0;
                }
        
                :root > :last-child:not([centered]) {
                  margin-bottom: 0;
                }
        
                :root > [centered] {
                  margin-top: auto;
                  margin-bottom: auto;
                }
            ");
	
	private string Padding => NoPadding ? "0" : Space;
	
	[Parameter]
	public RenderFragment ChildContent { get; set; }

	[Parameter]
	public string MinimumHeight { get; set; } = "100vh";

	[Parameter]
	public string Space { get; set; } = StyleDictionary.SpacingM;

	[Parameter]
	public bool NoPadding { get; set; }
}