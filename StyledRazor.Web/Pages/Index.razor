@page "/"
@inherits Styles

<Stack Gutter="@SpacingXl">
    <div>First</div>
    <div>
        <Button Padding=@($"{SpacingS} {SpacingXxl}")>Second</Button>
        <Styled
            Type=@Button 
            @onclick=@Click
            style=@($@"
                    --margin: 0 {SpacingXl};
                ")>
            Dynamic
        </Styled>
    </div>
    <div>
        Third
    </div>
</Stack>

@code
{
    Styled Button { get; set; } = GreyButton;

    private void Click() => Button =
        Button.Type == "GreyButton"
            ? AlertButton
            : GreyButton;
}