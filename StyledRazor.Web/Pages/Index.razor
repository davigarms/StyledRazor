@page "/"
@inherits UIComponents

<Stack>
  <Box>First</Box>

  <GridList Cols="2">
      <BasicButton>Second</BasicButton>
      <GridItem>
      <Cluster>
        <GenericButton Styled="@DynamicButton" @onclick="@Click">
          Dynamic
        </GenericButton>
      </Cluster>
    </GridItem>
  </GridList>
  
  <Box Horizontal="@Tokens.SpacingM" Height="@Tokens.SpacingXXL">
    <Cluster Space="@Tokens.SpacingL" Justify="@Tokens.AlignSpaceBetween" NoPadding Stretch>
      <Box Start>First</Box>
      <Box>Second</Box>
      <Box End>Third</Box>
    </Cluster>
  </Box>
  
  <GridList Cols="4" Gutter="@Tokens.SpacingL" GridRatio="1">
    @for (var i = 1; i < 9; i++ )
    {
      var content = "Item " + i;
        <GridItem>
          <Background Color="lightgrey">
            <Cover>
              <Container Centered>
                @content  
              </Container>
              <Cluster>
                Cluster
              </Cluster>
            </Cover>
        </Background>
      </GridItem>
    }
  </GridList>
</Stack>

@code
{
  Styled DynamicButton { get; set; } = GreyButton;

  private void Click() => DynamicButton =
    DynamicButton.Name == "GreyButton"
      ? AlertButton
      : GreyButton;
}