@page "/"
@inherits UIComponents

<Stack Gutter="@Tokens.SpacingXL">
  <Box>First</Box>
  
  <GridList Cols="2">
    <BasicButton>Second</BasicButton>
    <Box>
      <GenericButton Styled="@DynamicButton" @onclick="@Click">
        Dynamic
      </GenericButton>
    </Box>
  </GridList>
  <GridList Cols="4" Gutter="@Tokens.SpacingL" Height="@Tokens.SpacingXXL">
    @for (var i = 1; i < 9; i++ )
    {
      var content = "Item " + i;
        <GridItem>
          <Background Color="lightgrey">
            <Cover>
              <Container Centered>
                @content
              </Container>
            </Cover>
        </Background>
      </GridItem>
    }
  </GridList>
</Stack>

@code
{
  Styled DynamicButton { get; set; } = GreyButton;

  private void Click() => DynamicButton =
    DynamicButton.Name == "GreyButton"
      ? AlertButton
      : GreyButton;
}