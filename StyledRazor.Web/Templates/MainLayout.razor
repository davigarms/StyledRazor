@using StyledRazor.Core.Services
@using StyledRazor.Lib.Styles
<Split StretchIndex="2">
  <Container Width="15rem">
    <Box Padding="@Tokens.SpacingXs">
      Title
    </Box>
    <Box Padding="@Tokens.SpacingL">
      Subtitle
    </Box>
  </Container>
  <Cover>
    <header>  
      Header
    </header>
    <Container Width="@MediaQuery.ScreenM" Fluid Centered>
      @Body
    </Container>
    <div>Something above the footer</div>
    <footer>
      Footer
    </footer>
  </Cover>
</Split>

@code {
  [Parameter]
  public RenderFragment Body { get; set; }
}