<Split StretchIndex="2">
  <Container Width="15rem">
    <Box Padding="@Tokens.SpacingXs">
      Title
    </Box>
    <Box Padding="@Tokens.SpacingL">
      Subtitle
    </Box>
  </Container>
  <Cover Space="@Tokens.SpacingS">
    <header>  
      Header
    </header>
    <Container Width="@Tokens.ScreenM" Fluid Centered>
      @Body
    </Container>
    <footer>
      Footer
    </footer>
  </Cover>
</Split>

@code {
  [Inject] protected ITokens Tokens { get; set; }

  [Parameter] public RenderFragment Body { get; set; }
}